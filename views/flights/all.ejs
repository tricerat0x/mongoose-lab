<%- include('../partials/header') %>
    <h1>All Flights</h1>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departs</th>
            </tr>
        </thead>
        <tbody>
            <% flights.forEach(function(flight) { %>
                <tr>
                    <td><%= flight.airline %></td>
                    <td><%= flight.airport %></td>
                    <td><%= flight.flightNo %></td>
                    <td><%= flight.departs ? flight.departs.toDateString() : 'N/A' %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
<%- include('../partials/footer') %>